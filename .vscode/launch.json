{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Firefox + Live Server",
      "type": "firefox",
      "request": "launch",
      "url": "http://127.0.0.1:5500",
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "pathMappings": [
        {
          "url": "http://127.0.0.1:5500",
          "path": "${workspaceFolder}"
        }
      ]
    }
  ]
}